<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nl.hr.tylerdegraaff.easyspot.BookingKaraokeActivity"
    android:background="@drawable/background">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView8"
        android:src="@drawable/camping3"
        android:paddingTop="20dp"
        android:layout_marginBottom="76dp"
        android:layout_above="@+id/textView37"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Camping Karaoke"
        android:id="@+id/textView35"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_book_now"
        android:id="@+id/button11"
        android:onClick="bookNow"
        android:textColor="#ffffff"
        android:background="@drawable/button_selector"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="On this camping there is room for everyone! It doesnt matter if you have kids or if there animals that you bring with you. We always have a nice spot for you. Also there is a lot of activities to do for the kids and there is swimmingool available for everyone."
        android:id="@+id/textView37"
        android:textColor="#000000"
        android:layout_above="@+id/button11"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Medium Lot: 120eu p.n."
        android:id="@+id/textView40"
        android:textColor="#000000"
        android:layout_alignTop="@+id/textView84"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Large Lot: 180eu p.n."
        android:id="@+id/textView50"
        android:textColor="#000000"
        android:layout_below="@+id/textView40"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Lot: 80eu p.n"
        android:id="@+id/textView84"
        android:textColor="#000000"
        android:layout_above="@+id/textView37"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="56dp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageView5"
        android:src="@drawable/map_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
