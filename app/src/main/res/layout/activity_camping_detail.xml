<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CampingDetailActivity"
    android:background="@drawable/background_main">

    <ImageView
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:id="@+id/detail_camping_image"
        android:src="@drawable/camping3"
        android:paddingTop="20dp"
        android:layout_marginBottom="166dp"
        android:layout_above="@+id/reservate"
        android:layout_alignEnd="@+id/reservate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/detail_camping_name"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:text="Camping Karaoke" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_book_now"
        android:id="@+id/reservate"
        android:onClick="bookNow"
        android:textColor="#ffffff"
        android:background="@drawable/button_selector"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/detail_camping_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Lot: 80eu p.n"
        android:id="@+id/detail_camping_price"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/detail_camping_image"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_back"
        android:layout_alignTop="@+id/detail_camping_image"
        android:layout_alignParentStart="true"
        android:src="@drawable/abc_ic_ab_back_mtrl_am_alpha"
        android:onClick="Back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="France, Nice "
        android:id="@+id/detail_camping_address"
        android:textColor="#ffffff"
        android:paddingBottom="10px"
        android:layout_above="@+id/detail_camping_phone"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Gezellige camping voor jong en oud!"
        android:id="@+id/detail_camping_description"
        android:layout_marginTop="29dp"
        android:layout_alignTop="@+id/detail_camping_price"
        android:layout_alignParentStart="true"
        android:textColor="#090909" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0181-259025"
        android:id="@+id/detail_camping_phone"
        android:textColor="#ffffff"
        android:paddingBottom="10px"
        android:layout_above="@+id/detail_camping_email"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="campingkaraoke@info.fr"
        android:id="@+id/detail_camping_email"
        android:textColor="#ffffff"
        android:paddingBottom="10px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Zwembad, Zee, Restaurants, Evenementen"
        android:id="@+id/detail_camping_facilities"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/detail_camping_address"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff" />

</RelativeLayout>
