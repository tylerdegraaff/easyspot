<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nl.hr.tylerdegraaff.easyspot.SettingsActivity"
    android:background="@drawable/background"
    android:foregroundGravity="clip_vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="General Settings"
        android:id="@+id/textView57"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="User Settings"
        android:id="@+id/textView58"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/textView57"
        android:layout_centerHorizontal="true"
        android:onClick="AccountClick"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Camping Plot Settings"
        android:id="@+id/textView59"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/textView58"
        android:layout_centerHorizontal="true"
        android:onClick="AccountClick"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:id="@+id/button14"
        android:foregroundGravity="right"
        android:padding="20dp"
        android:foregroundTintMode="src_atop"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/textView58"
        android:background="@drawable/button_selector"
        android:textColor="#ffffff"
        android:onClick="LogOut" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="App Settings"
        android:id="@+id/textView60"
        android:layout_below="@+id/textView59"
        android:layout_alignEnd="@+id/button14"
        android:layout_marginTop="26dp"
        android:textColor="#ffffff" />

</RelativeLayout>
