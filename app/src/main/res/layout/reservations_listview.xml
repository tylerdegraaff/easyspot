<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent" >

    <TextView
        android:id="@+id/reservation_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start date and Enddate"
        android:textColor="#040404"
        android:layout_below="@+id/reservation_camping_name"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/reservation_camping_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camping name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="More info"
        android:onClick="detailPage"
        android:id="@+id/button8"
        android:background="@drawable/button_selector"
        android:textColor="#ffffff"
        android:layout_marginEnd="18dp"
        android:layout_alignTop="@+id/reservation_camping_name"
        android:layout_alignParentEnd="true" />

</RelativeLayout>