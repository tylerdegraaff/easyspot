<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nl.hr.tylerdegraaff.easyspot.MySpotCommunityActivity"
    android:background="@drawable/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="11-07-2016 Clown Event"
        android:id="@+id/textView87"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="For the little buds we have organized a fun event with alot of clowns!"
        android:id="@+id/textView88"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:layout_below="@+id/textView87"
        android:layout_alignParentLeft="true"
        android:layout_toStartOf="@+id/button17"
        android:layout_alignEnd="@+id/textView87" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="More info"
        android:id="@+id/button17"
        android:background="@drawable/button_selector"
        android:textColor="#ffffff"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/textView88"
        android:layout_below="@+id/textView87" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="13-07-2016 Karoke night with Frans Bauer!"
        android:id="@+id/textView89"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView88"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp"
        android:layout_alignEnd="@+id/textView88" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="For the big fans we will sing the biggest hits with the almighty Frans!"
        android:id="@+id/textView90"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:layout_below="@+id/textView89"
        android:layout_alignParentLeft="true"
        android:layout_alignEnd="@+id/textView89" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="More info"
        android:id="@+id/button18"
        android:background="@drawable/button_selector"
        android:textColor="#ffffff"
        android:layout_alignBottom="@+id/textView90"
        android:layout_alignStart="@+id/button17"
        android:layout_below="@+id/textView89"
        android:onClick="seeDetailFrans" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="18-07-2016 Beer fest"
        android:id="@+id/textView91"
        android:textColor="#ffffff"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/textView90"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="The title says it all... just bitterballen with beer."
        android:id="@+id/textView92"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:layout_below="@+id/textView91"
        android:layout_alignParentLeft="true"
        android:layout_alignEnd="@+id/textView91" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="More info"
        android:id="@+id/button19"
        android:background="@drawable/button_selector"
        android:textColor="#ffffff"
        android:layout_alignBottom="@+id/textView92"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView92" />
</RelativeLayout>
