<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nl.hr.tylerdegraaff.easyspot.SearchCampingActivity"
    android:background="@color/colorSecondary">

    <EditText
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:id="@+id/editText15"
        android:foreground="@drawable/abc_ic_search_api_mtrl_alpha"
        android:foregroundGravity="left|center_vertical"
        android:foregroundTintMode="src_in"
        android:text="search on place or camping"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textStyle="italic"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView2"
        android:src="@android:drawable/ic_menu_gallery"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/editText15"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Camping Blue Sea"
        android:id="@+id/textView51"
        android:layout_alignTop="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="France, Montpellier"
        android:id="@+id/textView52"
        android:layout_below="@+id/textView51"
        android:layout_toEndOf="@+id/imageView2"
        android:textColor="#000000" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView3"
        android:src="@android:drawable/ic_menu_gallery"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Camping Holland"
        android:id="@+id/textView53"
        android:layout_below="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="France, Nice"
        android:id="@+id/textView54"
        android:layout_below="@+id/textView53"
        android:layout_toEndOf="@+id/imageView3"
        android:textColor="#000000" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView4"
        android:src="@android:drawable/ic_menu_gallery"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Camping Karoake"
        android:id="@+id/textView55"
        android:layout_below="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView4"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="France, Marseille"
        android:id="@+id/textView56"
        android:layout_below="@+id/textView55"
        android:layout_toEndOf="@+id/imageView4"
        android:textColor="#000000" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageView5"
        android:src="@drawable/arrow_right"
        android:layout_marginStart="38dp"
        android:layout_alignTop="@+id/textView51"
        android:layout_toEndOf="@+id/textView51" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageView6"
        android:src="@drawable/arrow_right"
        android:layout_alignTop="@+id/textView53"
        android:layout_alignStart="@+id/imageView5" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageView7"
        android:src="@drawable/arrow_right"
        android:layout_alignTop="@+id/textView55"
        android:layout_alignStart="@+id/imageView6"
        android:onClick="Reservate" />

</RelativeLayout>
