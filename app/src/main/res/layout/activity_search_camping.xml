<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nl.hr.tylerdegraaff.easyspot.SearchCampingActivity"
    android:background="@drawable/background">

    <EditText
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:id="@+id/editText15"
        android:foregroundGravity="center_vertical"
        android:text="search on place or camping"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textStyle="italic"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/imageView2"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/editText15"
        android:layout_alignParentStart="true"
        android:src="@drawable/camping1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Camping Blue Sea"
        android:id="@+id/textView51"
        android:layout_alignTop="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="France, Montpellier"
        android:id="@+id/textView52"
        android:layout_below="@+id/textView51"
        android:layout_toEndOf="@+id/imageView2"
        android:textColor="#000000" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/imageView3"
        android:src="@drawable/camping2"
        android:layout_alignTop="@+id/textView53"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Camping Holland"
        android:id="@+id/textView53"
        android:textColor="#ffffff"
        android:layout_below="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView3"
        android:layout_marginTop="19dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="France, Nice"
        android:id="@+id/textView54"
        android:textColor="#000000"
        android:layout_below="@+id/textView53"
        android:layout_toEndOf="@+id/imageView4" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/imageView4"
        android:src="@drawable/camping3"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Camping Karoake"
        android:id="@+id/textView55"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/imageView4"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="France, Marseille"
        android:id="@+id/textView56"
        android:textColor="#000000"
        android:layout_below="@+id/textView55"
        android:layout_toEndOf="@+id/imageView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="See more"
        android:id="@+id/textView80"
        android:layout_alignTop="@+id/textView52"
        android:layout_alignEnd="@+id/editText15"
        android:layout_marginEnd="38dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="See more"
        android:id="@+id/textView82"
        android:layout_alignBottom="@+id/textView54"
        android:layout_alignStart="@+id/textView80"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="See more"
        android:id="@+id/textView83"
        android:layout_alignBottom="@+id/textView56"
        android:layout_alignStart="@+id/textView82"
        android:onClick="Reservate"
        android:textColor="#000000" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lvCampings"
        android:layout_below="@+id/imageView4"
        android:layout_marginTop="22dp"
        android:choiceMode="none"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
