<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nl.hr.tylerdegraaff.easyspot.MySpotProfileActivity"
    android:background="@drawable/background"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Energy cost"
        android:id="@+id/textView78"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView79"
        android:text="€125,20"
        android:layout_below="@+id/textView78"
        android:layout_alignParentStart="true"
        android:textColor="#000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pay"
        android:id="@+id/button12"
        android:textColor="#ffffff"
        android:background="@drawable/button_selector"
        android:padding="5dp"
        android:onClick="backToHome"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Groceries cost"
        android:id="@+id/textView70"
        android:textColor="#ffffff"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/textView79"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView80"
        android:text="€10"
        android:textColor="#000000"
        android:layout_below="@+id/textView70"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Additional cost"
        android:id="@+id/textView82"
        android:textColor="#ffffff"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/textView80"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView83"
        android:text="€4,95"
        android:textColor="#000000"
        android:layout_below="@+id/textView82"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to main menu"
        android:id="@+id/button20"
        android:textColor="#ffffff"
        android:background="@drawable/button_selector"
        android:padding="5dp"
        android:onClick="backToHome"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
