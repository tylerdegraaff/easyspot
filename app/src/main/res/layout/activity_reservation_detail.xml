<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/background_main">

    <ImageView
        android:id="@+id/res_detail_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:adjustViewBounds="true"
        android:maxHeight="80dp"
        android:maxWidth="80dp"
        android:src="@drawable/camping1"
        android:layout_marginTop="14dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/res_detail_campingName" />

    <TextView
        android:id="@+id/res_detail_campingName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camping Blue Sea"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:layout_marginEnd="61dp"
        android:layout_alignTop="@+id/res_detail_image"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="France, Nice"
        android:id="@+id/res_detail_campingAddress"
        android:layout_below="@+id/res_detail_campingName"
        android:layout_alignStart="@+id/res_detail_campingName"
        android:textColor="#080707" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Date"
        android:id="@+id/textView15"
        android:layout_marginTop="14dp"
        android:layout_marginStart="17dp"
        android:layout_below="@+id/res_detail_image"
        android:layout_alignParentStart="true"
        android:textColor="#070707" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="28 Aug 2016 - 51 Aug 2016"
        android:id="@+id/res_detail_date"
        android:layout_below="@+id/textView15"
        android:layout_alignStart="@+id/textView15"
        android:textColor="#070606" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Tel: 0181-392526"
        android:id="@+id/res_detail_tel"
        android:textColor="#fdfafa"
        android:layout_alignBaseline="@+id/button8"
        android:layout_alignBottom="@+id/button8"
        android:layout_alignStart="@+id/res_detail_price" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Email: campingbluesea@info.fr"
        android:id="@+id/res_detail_email"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/res_detail_tel"
        android:layout_marginBottom="15dp"
        android:textColor="#fdfcfc" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ask edit"
        android:id="@+id/button8"
        android:layout_alignBottom="@+id/res_detail_email"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:background="@drawable/button_selector"
        android:textColor="#ffffff"
        android:onClick="onAskEdit" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Price"
        android:id="@+id/textView51"
        android:layout_below="@+id/res_detail_date"
        android:layout_alignStart="@+id/res_detail_date"
        android:layout_marginTop="17dp"
        android:textColor="#050505" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="â‚¬ 90 p.n"
        android:id="@+id/res_detail_price"
        android:layout_below="@+id/textView51"
        android:layout_alignStart="@+id/textView51"
        android:textColor="#020202" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Camping info"
        android:id="@+id/textView53"
        android:layout_below="@+id/res_detail_price"
        android:layout_alignStart="@+id/res_detail_price"
        android:layout_marginTop="27dp"
        android:textColor="#040404" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="fksdnflsdkf kfk lsdfndkfn nkdklfdnfl dkfdnkflsdf ndslkfnsdlfnsd fldnflsdknfdksf nsldf lsdfndlfknsd lfnsdlfdf"
        android:id="@+id/res_detail_desc"
        android:layout_below="@+id/textView53"
        android:layout_alignStart="@+id/textView53"
        android:layout_alignEnd="@+id/res_detail_campingName"
        android:textColor="#030303" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="People"
        android:id="@+id/textView55"
        android:textColor="#020202"
        android:layout_alignTop="@+id/textView51"
        android:layout_alignEnd="@+id/res_detail_image"
        android:layout_marginEnd="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="4"
        android:layout_below="@+id/textView55"
        android:layout_alignStart="@+id/textView55"
        android:textColor="#020202"
        android:id="@+id/textView19" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Facilities"
        android:id="@+id/textView16"
        android:layout_marginTop="25dp"
        android:textColor="#070606"
        android:layout_below="@+id/res_detail_desc"
        android:layout_alignStart="@+id/res_detail_desc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Swimming Pool, Supermarket, Sea"
        android:id="@+id/res_detail_facilities"
        android:layout_below="@+id/textView16"
        android:layout_alignStart="@+id/textView16"
        android:textColor="#040404" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Animals allowed"
        android:id="@+id/textView17"
        android:textColor="#020202"
        android:layout_above="@+id/textView18"
        android:layout_alignEnd="@+id/res_detail_desc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Yes"
        android:textColor="#020202"
        android:id="@+id/textView18"
        android:layout_alignTop="@+id/textView19"
        android:layout_alignStart="@+id/textView17" />

</RelativeLayout>