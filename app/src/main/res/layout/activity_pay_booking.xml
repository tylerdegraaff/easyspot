<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nl.hr.tylerdegraaff.easyspot.PayBookingActivity"
    android:background="@color/colorSecondary">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pay"
        android:id="@+id/button15"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp"
        android:onClick="onPay" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Lot 47 - Info"
        android:id="@+id/textView61"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Size: Medium"
        android:id="@+id/textView62"
        android:layout_below="@+id/textView61"
        android:layout_alignStart="@+id/textView64"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Animals: Allowed"
        android:id="@+id/textView63"
        android:layout_below="@+id/textView62"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Kids friendly"
        android:id="@+id/textView64"
        android:layout_below="@+id/textView63"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small distance from the showers"
        android:id="@+id/textView65"
        android:layout_below="@+id/textView64"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Great free WiFi connection"
        android:id="@+id/textView66"
        android:layout_below="@+id/textView65"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Cost"
        android:id="@+id/textView67"
        android:layout_below="@+id/textView66"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="12 x 120 = 1440 euro"
        android:id="@+id/textView69"
        android:layout_alignEnd="@+id/textView61"
        android:layout_centerVertical="true"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Period: 26 Aug - 6 Sep"
        android:id="@+id/textView68"
        android:layout_below="@+id/textView67"
        android:layout_alignStart="@+id/textView66"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="10 x 4 = 40 euro"
        android:id="@+id/textView71"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView69"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="________________"
        android:id="@+id/textView72"
        android:layout_below="@+id/textView71"
        android:layout_alignStart="@+id/textView71" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Total: 1480 euro"
        android:id="@+id/textView73"
        android:textColor="#ffffff"
        android:textSize="17dp"
        android:layout_below="@+id/textView72"
        android:layout_alignEnd="@+id/textView69" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Payment for reservation is 148,00 euro"
        android:id="@+id/textView74"
        android:layout_marginBottom="33dp"
        android:layout_above="@+id/button15"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textSize="18dp" />

</RelativeLayout>
